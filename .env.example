# =============================================================================
# Kizuna Platform - Environment Configuration
# =============================================================================
# Copy this file to .env and update values for your environment

# -----------------------------------------------------------------------------
# Flask Configuration
# -----------------------------------------------------------------------------
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-in-production
DEBUG=true

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# Local SQLite (default for development)
DATABASE_URL=sqlite:///kizuna.db

# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql://user:password@localhost:5432/kizuna
# Heroku/Render format (will be auto-converted):
# DATABASE_URL=postgres://user:password@host:5432/database

# Connection pool settings (production)
# DB_POOL_SIZE=10
# DB_MAX_OVERFLOW=20

# -----------------------------------------------------------------------------
# Session Security
# -----------------------------------------------------------------------------
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax
SESSION_LIFETIME_HOURS=168

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=5
RATE_LIMIT_PER_HOUR=20

# -----------------------------------------------------------------------------
# Admin Configuration
# -----------------------------------------------------------------------------
# Set these for initial admin user creation
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-password

# -----------------------------------------------------------------------------
# Email Configuration (for notifications and password reset)
# -----------------------------------------------------------------------------
MAIL_SERVER=localhost
MAIL_PORT=25
MAIL_USE_TLS=false
MAIL_USE_SSL=false
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_DEFAULT_SENDER=noreply@yourdomain.com

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_NAME=Kizuna
APP_URL=http://localhost:5001

# -----------------------------------------------------------------------------
# Security Settings
# -----------------------------------------------------------------------------
PASSWORD_MIN_LENGTH=8
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_DURATION=300

# -----------------------------------------------------------------------------
# Pagination
# -----------------------------------------------------------------------------
EVENTS_PER_PAGE=10
CLUBS_PER_PAGE=12
USERS_PER_PAGE=20
